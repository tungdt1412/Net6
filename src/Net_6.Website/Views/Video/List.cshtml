@using Net_6.Database.Entities
@using Net_6.Logic.Shared.Models
@model IEnumerable<VideoSummaryModel>
@if (Model != null &&
   Model.Any())
{
    foreach (var video in Model)
    {
        <tr>
            <td>@video.Id</td>
            <td>@video.Title</td>
            <td>@video.Description</td>
            <td>@video.Keywords</td>
            <td>@video.UrlMeta</td>
            <td>
                <a class="btn btn-success d-inline" asp-action="Detail" asp-controller="PlayList" asp-route-id="@video.Id">
                    <i class="fa-solid fa-arrow-up-right-from-square"></i>
                </a>
                <button class="btn btn-danger d-inline ms-2" onclick="onDelete(@video.Id)"><i class="fa-solid fa-trash-can"></i></button>
            </td>
        </tr>
    }
}  