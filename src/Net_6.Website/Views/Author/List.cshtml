@using Net_6.Database.Entities
@using Net_6.Logic.Shared.Models
@model IEnumerable<AuthorSummaryModel>
@if(Model != null &&
    Model.Any())
{
    foreach(var author in Model)
    {
        <tr>
            <td>@author.Id</td>
            <td>@author.FullName</td>
            <td>@author.Email</td>
            <td>@author.Phone</td>
            <td>@author.ShortName</td>
            <td>
                <a class="btn btn-success d-inline" asp-action="Detail" asp-controller="Author" asp-route-id="@author.Id">
                    <i class="fa-solid fa-arrow-up-right-from-square"></i>
                </a>
                <button class="btn btn-danger d-inline ms-2" onclick="onDelete(@author.Id)"><i class="fa-solid fa-trash-can"></i></button>
            </td>
        </tr>
    }
}     
