@using Net_6.Database.Entities
@using Net_6.Logic.Shared.Models
@model IEnumerable<TagSummaryModel>
@if (Model != null &&
   Model.Any())
{
    foreach (var tag in Model)
    {
        <tr>
            <td>@tag.Id</td>
            <td>@tag.Title</td>
            <td>@tag.UrlMeta</td>
            <td>@tag.Description</td>
            <td>
                <a class="btn btn-success d-inline" asp-action="Detail" asp-controller="Tag" asp-route-id="@tag.Id">
                    <i class="fa-solid fa-arrow-up-right-from-square"></i>
                </a>
                <button class="btn btn-danger d-inline ms-2" onclick="onDelete(@tag.Id)"><i class="fa-solid fa-trash-can"></i></button>
            </td>
        </tr>
    }
}
