@using Net_6.Database.Entities
@using Net_6.Logic.Shared.Models
@model IEnumerable<UserSummaryModel>
@if (Model != null &&
Model.Any())
{
    foreach (var user in Model)
    {
        <tr>
            <td>@user.UserName</td>
            <td>@user.Email</td>
            <td>@user.PhoneNumber</td>
            <td>@user.AuthorId</td>
            <td>
                <a class="btn btn-success d-inline" asp-action="Detail" asp-controller="User" asp-route-userName="@user.UserName">
                    <i class="fa-solid fa-arrow-up-right-from-square"></i>
                </a>
                <button class="btn btn-danger d-inline ms-2" onclick="onDelete('@user.UserName')"><i class="fa-solid fa-trash-can"></i></button>
                <a class="btn btn-warning d-inline ms-2" asp-action="ResetPassword" asp-controller="User" asp-route-resetUserName="@user.UserName">
                    <i class="fa-solid fa-unlock-keyhole"></i>
                </a>
            </td>
        </tr>
    }
}  